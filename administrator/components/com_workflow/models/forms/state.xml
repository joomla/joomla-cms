<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset addfieldprefix="Joomla\Component\Workflow\Administrator\Field">

		<field
				name="id"
				type="text"
				label="JGLOBAL_FIELD_ID_LABEL"
				description="JGLOBAL_FIELD_ID_DESC"
				default="0"
				class="readonly"
				size="10"
				readonly="true"
		/>


		<field
				name="title"
				type="text"
				label="COM_WORKFLOW_FIELD_TITLE_LABEL"
				description="COM_WORKFLOW_FIELD_TITLE_DESC"
				class="input-xxlarge input-large-text"
				size="40"
				required="true"
		/>

		<field
				name="description"
				type="editor"
				label="COM_WORKFLOW_FIELD_DESC_LABEL"
				description="COM_WORKFLOW_FIELD_DESC_DESC"
				class="input-xxlarge input-large-text"
		/>

		<field
				name="condition"
				type="list"
				label="COM_WORKFLOW_CONDITION"
				description="COM_WORKFLOW_CONDITION_DESC"
				class="input-xxlarge input-large-text"
		        required="true"
		>
			<option value="3">COM_WORKFLOW_PUBLISHED</option>
			<option value="2">COM_WORKFLOW_UNPUBLISHED</option>
			<option value="1">COM_WORKFLOW_TRASHED</option>
		</field>

	</fieldset>

	<fieldset name="params" label="COM_WORKFLOW_PARAMS_LABEL">
		<field
				name="default"
				type="radio"
				label="COM_WORKFLOW_FIELD_IS_DEFAULT_LABEL"
				description="COM_WORKFLOW_FIELD_IS_DEFAULT_DESC"
				class="switcher"
		        default="0"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

	</fieldset>

</form>
