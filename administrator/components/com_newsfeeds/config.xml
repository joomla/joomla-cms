<?xml version="1.0" encoding="utf-8"?>
<config>

<fields
		group="newsfeed"
		label="COM_NEWSFEEDS_FIELD_CONFIG_NEWSFEED_SETTINGS_LABEL"
		description="COM_NEWSFEEDS_FIELD_CONFIG_NEWSFEED_SETTINGS_DESC">

		<field
			id="show_feed_image"
			name="show_feed_image"
			type="radio"
			default="1"
			label="COM_NEWSFEEDS_FIELD_SHOW_FEED_IMAGE_LABEL"
			description="COM_NEWSFEEDS_FIELD_SHOW_FEED_IMAGE_DESC">
			<option
				value="0">JCOMMON_HIDE</option>
			<option
				value="1">JCOMMON_SHOW</option>
		</field>
		

		<field
			id="show_feed_description"
			name="show_feed_description"
			type="radio"
			default="1"
			label="COM_NEWSFEEDS_FIELD_SHOW_FEED_DESCRIPTION_LABEL"
			description="COM_NEWSFEEDS_FIELD_SHOW_FEED_DESCRIPTION_DESC">
			<option
				value="0">JCOMMON_HIDE</option>
			<option
				value="1">JCOMMON_SHOW</option>
		</field>
		

		<field
			id="show_item_description"
			name="show_item_description"
			type="radio"
			default="1"
			label="COM_NEWSFEEDS_FIELD_SHOW_ITEM_DESCRIPTION_LABEL"
			description="COM_NEWSFEEDS_FIELD_SHOW_ITEM_DESCRIPTION_DESC">
			<option
				value="0">JCOMMON_HIDE</option>
			<option
				value="1">JCOMMON_SHOW</option>
		</field>

		<field
			id="feed_word_count"
			name="feed_word_count"
			type="text"
			class="inputbox"
			size="6"
			default="0"
			label="COM_NEWSFEEDS_FIELD_WORD_COUNT_LABEL"
			description="COM_NEWSFEEDS_FIELD_WORD_COUNT_DESC" />
	</fields>
	
	<fields
		group="category"
		label="COM_NEWSFEEDS_FIELD_CONFIG_CATEGORY_SETTINGS_LABEL"
		description="COM_NEWSFEEDS_FIELD_CONFIG_CATEGORY_SETTINGS_DESC">

		<field
			id="show_headings"
			name="show_headings"
			type="radio"
			default="1"
			label="COM_NEWSFEEDS_FIELD_TABLE_HEADINGS_LABEL"
			description="COM_NEWSFEEDS_FIELD_TABLE_HEADINGS_DESC">
			<option
				value="0">JCOMMON_HIDE</option>
			<option
				value="1">JCOMMON_SHOW</option>
		</field>

		<field
			id="show_name"
			name="show_name"
			type="radio"
			default="1"
			label="COM_NEWSFEEDS_FIELD_NAME_COLUMN_LABEL"
			description="COM_NEWSFEEDS_FIELD_NAME_COLUMN_DESC">
			<option
				value="0">JCOMMON_HIDE</option>
			<option
				value="1">JCOMMON_SHOW</option>
		</field>

		<field
			id="show_articles"
			name="show_articles"
			type="radio"
			default="1"
			label="COM_NEWSFEEDS_FIELD_NUM_ARTICLES_COLUMN_LABEL"
			description="COM_NEWSFEEDS_FIELD_NUM_ARTICLES_COLUMN_DESC">
			<option
				value="0">JCOMMON_HIDE</option>
			<option
				value="1">JCOMMON_SHOW</option>
		</field>

		<field
			id="show_link"
			name="show_link"
			type="radio"
			default="1"
			label="COM_NEWSFEEDS_FIELD_SHOW_LINKS_LABEL"
			description="COM_NEWSFEEDS_FIELD_SHOW_LINKS_DESC">
			<option
				value="0">JCOMMON_HIDE</option>
			<option
				value="1">JCOMMON_SHOW</option>
		</field>

		<field
		name="spacer1" 
		type="spacer"
		hr="true"
		/>

		<field
			id="show_description"
			name="show_description"
			type="radio"
			default="1"
			label="COM_NEWSFEEDS_FIELD_SHOW_CATEGORY_DESC_LABEL"
			description="COM_NEWSFEEDS_FIELD_SHOW_CATEGORY_DESC_DESC">
			<option
				value="0">JCOMMON_HIDE</option>
			<option
				value="1">JCOMMON_SHOW</option>
		</field>
		
			<field 
			name="show_description_image" 
			type="radio" 
			default="1" 
			label="COM_NEWSFEEDS_FIELD_SHOW_CATEGORY_IMAGE_LABEL" 
			description="COM_NEWSFEEDS_FIELD_SHOW_CATEGORY_IMAGE_DESC">
	 			<option value="0">JCOMMON_HIDE</option>
	 			<option value="1">JCOMMON_SHOW</option>
	 	</field>
	 	
	 		<field
			name="display_num"
			type="list"
			default=""
			label="COM_NEWSFEEDS_FIELD_NUMBER_ITEMS_LIST_LABEL"
			description="COM_NEWSFEEDS_FIELD_NUMBER_ITEMS_LIST_DESC">
				<option value="">JCOMMON_USE_GLOBAL</option>
				<option value="5">J5</option>
				<option value="10">J10</option>
				<option value="15">J15</option>
				<option value="20">J20</option>
				<option value="25">J25</option>
				<option value="30">J30</option>
				<option value="50">J50</option>
				<option value="100">J100</option>
				<option value="0">JALL</option>
		</field>
		
		<field 
			name="show_pagination_limit" 
			type="radio" 
			default="1" 
			label="COM_NEWSFEEDS_FIELD_DISPLAY_SELECT_LABEL" 
			description="COM_NEWSFEEDS_FIELD_DISPLAY_SELECT_DESC">
				<option value="0">JCOMMON_HIDE</option>
				<option value="1">JCOMMON_SHOW</option>
		</field>
		
		<field 
			name="show_pagination" 
			type="radio" 
			default="1" 
			label="COM_NEWSFEEDS_FIELD_PAGINATION_LABEL" 
			description="COM_NEWSFEEDS_FIELD_PAGINATION_DESC">
				<option value="0">JCommon_Hide</option>
				<option value="1">JCommon_Show</option>
		</field>
		
			<field
				name="show_pagination_results"
				type="radio"
				default="1"
				label="COM_NEWSFEEDS_FIELD_PAGINATION_RESULTS_LABEL"
				description="COM_NEWSFEEDS_FIELD_PAGINATION_RESULTS_DESC">
				<option
					value="0">Hide</option>
				<option
					value="1">Show</option>
			</field>

		<field
			id="show_cat_items"
			name="show_cat_items"
			type="radio"
			default="1"
			label="COM_NEWSFEEDS_FIELD_SHOW_CAT_ITEMS_LABEL"
			description="COM_NEWSFEEDS_FIELD_SHOW_CAT_ITEMS_DESC">
			<option
				value="0">JCOMMON_HIDE</option>
			<option
				value="1">JCOMMON_SHOW</option>
		</field>

	</fields>

	<fields
		group="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
		hidden="true">

		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			filter="rules"
			component="com_newsfeeds"
			section="component" />
	</fields>
</config>