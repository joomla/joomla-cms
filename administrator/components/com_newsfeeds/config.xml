<?xml version="1.0" encoding="utf-8"?>
<config>

<fields
		group="newsfeed"
		label="Newsfeeds_Config_Newsfeed_Settings_Label"
		description="Newsfeeds_Config_Newsfeed_Settings_Desc">

		<field
			id="show_feed_image"
			name="show_feed_image"
			type="radio"
			default="1"
			label="Newsfeeds_Show_Feed_Image_Label"
			description="Newsfeeds_Show_Feed_Image_Desc">
			<option
				value="0">JCOMMON_HIDE</option>
			<option
				value="1">JCOMMON_SHOW</option>
		</field>
		

		<field
			id="show_feed_description"
			name="show_feed_description"
			type="radio"
			default="1"
			label="Newsfeeds_Show_Feed_Description_Label"
			description="Newsfeeds_Show_Feed_Description_Desc">
			<option
				value="0">JCOMMON_HIDE</option>
			<option
				value="1">JCOMMON_SHOW</option>
		</field>
		

		<field
			id="show_item_description"
			name="show_item_description"
			type="radio"
			default="1"
			label="Newsfeeds_Show_Item_Description_Label"
			description="Newsfeeds_Show_Item_Description_Desc">
			<option
				value="0">JCOMMON_HIDE</option>
			<option
				value="1">JCOMMON_SHOW</option>
		</field>

		<field
			id="feed_word_count"
			name="feed_word_count"
			type="text"
			class="inputbox"
			size="6"
			default="0"
			label="Newsfeeds_Word_Count_Label"
			description="Newsfeeds_Word_Count_Desc" />
	</fields>
	
	<fields
		group="category"
		label="Newsfeeds_Config_Category_Settings_Label"
		description="Newsfeeds_Config_Category_Settings_Desc">

		<field
			id="show_headings"
			name="show_headings"
			type="radio"
			default="1"
			label="Newsfeeds_Table_Headings_Label"
			description="Newsfeeds_Table_Headings_Desc">
			<option
				value="0">JCOMMON_HIDE</option>
			<option
				value="1">JCOMMON_SHOW</option>
		</field>

		<field
			id="show_name"
			name="show_name"
			type="radio"
			default="1"
			label="Newsfeeds_Name_Column_Label"
			description="Newsfeeds_Name_Column_Desc">
			<option
				value="0">JCOMMON_HIDE</option>
			<option
				value="1">JCOMMON_SHOW</option>
		</field>

		<field
			id="show_articles"
			name="show_articles"
			type="radio"
			default="1"
			label="Newsfeeds_Num_Articles_Column_Label"
			description="Newsfeeds_Num_Articles_Column_Desc">
			<option
				value="0">JCOMMON_HIDE</option>
			<option
				value="1">JCOMMON_SHOW</option>
		</field>

		<field
			id="show_link"
			name="show_link"
			type="radio"
			default="1"
			label="Newsfeeds_Show_Links_Label"
			description="Newsfeeds_Show_Links_Desc">
			<option
				value="0">JCOMMON_HIDE</option>
			<option
				value="1">JCOMMON_SHOW</option>
		</field>

		<!-- Spacer -->

		<field
			id="show_description"
			name="show_description"
			type="radio"
			default="1"
			label="Newsfeeds_Show_Category_Desc_Label"
			description="Newsfeeds_Show_Category_Desc_Desc">
			<option
				value="0">JCOMMON_HIDE</option>
			<option
				value="1">JCOMMON_SHOW</option>
		</field>
		
			<field 
			name="show_description_image" 
			type="radio" 
			default="1" 
			label="Newsfeeds_Show_Category_Image_Label" 
			description="Newsfeeds_Show_Category_Image_Desc">
	 			<option value="0">JCommon_Hide</option>
	 			<option value="1">JCommon_Show</option>
	 	</field>
	 	
	 		<field
			name="display_num"
			type="list"
			default=""
			label="Newsfeeds_Attribs_Number_Items_List_Label"
			description="Newsfeeds_Attribs_Number_Items_List_Desc">
				<option value="">JCOMMON_USE_GLOBAL</option>
				<option value="5">J5</option>
				<option value="10">J10</option>
				<option value="15">J15</option>
				<option value="20">J20</option>
				<option value="25">J25</option>
				<option value="30">J30</option>
				<option value="50">J50</option>
				<option value="100">J100</option>
				<option value="0">JALL</option>
		</field>
		
		<field 
			name="show_pagination_limit" 
			type="radio" 
			default="1" 
			label="Newsfeeds_Attribs_Display_Select_Label" 
			description="Newsfeeds_Attribs_Display_Select_Desc">
				<option value="0">JCommon_Hide</option>
				<option value="1">JCommon_Show</option>
		</field>
		
		<field 
			name="show_pagination" 
			type="radio" 
			default="1" 
			label="Newsfeeds_Attribs_Pagination_Label" 
			description="Newsfeeds_Attribs_Pagination_Desc">
				<option value="0">JCommon_Hide</option>
				<option value="1">JCommon_Show</option>
		</field>
		
			<field
				name="show_pagination_results"
				type="radio"
				default="1"
				label="Pagination Results"
				description="fieldPAGINATIONRESULTS">
				<option
					value="0">Hide</option>
				<option
					value="1">Show</option>
			</field>

		<field
			id="show_cat_items"
			name="show_cat_items"
			type="radio"
			default="1"
			label="Newsfeeds_Show_Cat_Items_Label"
			description="Newsfeeds_Show_Cat_Items_Desc">
			<option
				value="0">JCOMMON_HIDE</option>
			<option
				value="1">JCOMMON_SHOW</option>
		</field>

	</fields>

	<fields
		group="permissions"
		label="JConfig_Permissions_Label"
		description="JConfig_Permissions_Desc"
		hidden="true">

		<field
			name="rules"
			type="rules"
			label="JConfig_Permissions_Label"
			filter="rules"
			component="com_newsfeeds"
			section="component" />
	</fields>
</config>
