<?xml version="1.0" encoding="utf-8"?>
<config>
	<params group="messages">
		<param name="message_lock" type="radio" default="0" label="Inbox locked" description="">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="message_mail_on_new" type="radio" default="1" label="Mail me on new message" description="Show/Hide the articles title">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="message_auto_purge" type="text" size="20" default="7" label="Auto purge messages older then x days" description="" />
	</params>
</config>
