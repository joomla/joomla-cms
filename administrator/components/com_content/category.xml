<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id: category.xml 14137 2010-01-12 19:32:01Z chdemko $ -->
<form>
	<fields
		group="params"
		array="true"
		label="Categories_Options">

		<field
			name="target"
			type="componentlayout"
			label="JFIELD_ALT_LAYOUT_LABEL"
			description="JField_Alt_Component_Layout_Desc"
			extension=""
			view="categories"
			/>
		<field
			name="image"
			type="imagelist"
			directory="/images"
			hide_default="1"
			default=""
			label="Image"
			description="fieldIMAGE" />
	</fields>

	<fields
		group="metadata"
		array="true">

		<field
			name="page_title"
			type="text"
			label="JField_Alt_Page_title_Label"
			description="JField_Alt_Page_title_Desc"
			size="30"
			default=""/>

		<field
			name="author"
			type="text"
			label="JField_Metadata_Author_Label"
			description="JField_Metadata_Author_Desc"
			size="30"
			default=""/>

		<field
			name="robots"
			type="list"
			label="JField_Metadata_Robots_Label"
			description="JField_Metadata_Robots_Desc"
			default="">
			<option
				value="">USE_GLOBAL</option>
			<option
				value="0">index, follow</option>
			<option
				value="1">noindex, follow</option>
			<option
				value="2">index, nofollow</option>
			<option
				value="3">noindex, nofollow</option>
			<option
				value="4">Don't display robots tag</option>
		</field>

	</fields>

</form>
