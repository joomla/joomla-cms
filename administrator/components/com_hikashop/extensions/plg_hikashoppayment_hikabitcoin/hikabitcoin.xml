<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="2.5" method="upgrade" group="hikashoppayment">
	<name>Hikashop BitCoin Payment Plugin</name>
	<creationDate>April 2010</creationDate>
	<version>1.0.0</version>
	<author>Hikashop</author>
	<authorEmail>dev@707developement.com</authorEmail>
	<authorUrl>http://www.hikashop.com</authorUrl>
	<copyright>Copyright (C) 2010 HIKARI SOFTWARE SARL - All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>This plugin enables you to setup your bitcoin payment system</description>
	<files>
		<filename plugin="hikabitcoin">hikabitcoin.php</filename>
		<filename>hikabitcoin_configuration.php</filename>
		<filename>hikabitcoin_end.php</filename>
		<filename>index.html</filename>
		<folder>bitpay</folder>
	</files>
	<media folder="media" destination="com_hikashop/images/payment">
			<filename>hikabitcoin.png</filename>
	</media>
	<params addpath="/components/com_hikashop/params">
		<param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop" description="HikaShop options" />
	</params>
	<config>
		<fields name="params" addfieldpath="/components/com_hikashop/fields">
			<fieldset name="basic">
				<field
                        id="pluginoptions"
                        name="pluginoptions"
                        type="pluginoptions"
                        label="hikashop"
                        description="HikaShop options"
                />
            </fieldset>
		</fields>
	</config>
</extension>
