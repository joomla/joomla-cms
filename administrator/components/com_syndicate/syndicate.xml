<?xml version="1.0" encoding="iso-8859-1"?>
<install type="component" version="1.0.0">
	<name>Syndicate</name>
	<author>Joomla! Project</author>
	<copyright>(C) 2005 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.0.0</version>
	<description>This component controls the Syndication settings</description>
	<params>
		<param name="check" type="radio" default="1" label="Security Check" description="If enabled then the syndication functionality will only work if the mod_rssfeed module is published">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="cache" type="radio" default="1" label="Cache" description="Cache the feed files">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="cache_time" type="text" size="8" default="3600" label="Cache Time" description="PARAMCAHETIME" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="count" type="text" size="4" default="5" label="Num Items" description="Number of Items to syndicate" />
		<param name="title" type="text" size="40" default="Powered by Joomla! 1.0" label="Title" description="Syndication Title" />
		<param name="description" type="textarea" rows="5" cols="30" default="Joomla! site syndication" label="Description" description="Syndication Description" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="image_file" type="imagelist" directory="/images/M_images" default="" label="Image" description="Image to be included in feed" />
		<param name="image_alt" type="text" size="30" default="Powered by Joomla! 1.0" label="Image Alt" description="Alt text for image" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="limit_text" type="radio" default="1" label="Limit Text" description="PARAMLIMITTEXT">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="text_length" type="text" size="4" default="20" label="Text Length" description="PARAMTEXTLENGTH" />
	</params>
</install>
