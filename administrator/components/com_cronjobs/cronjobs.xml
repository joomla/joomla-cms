<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade">
	<name>com_cronjobs</name>
	<creationDate>July 2021</creationDate>
	<author>Joomla! Projects</author>
	<license>GPL v3</license>
	<version>4.0.0</version>
	<description>
		COM_CRONJOBS_XML_DESCRIPTION
	</description>
	<namespace path="src">Joomla\Component\Cronjobs</namespace>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/mysql/install.sql</file>
			<file drive="postgresql" charset="utf8">sql/postgresql/install.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/mysql/uninstall.sql</file>
			<file driver="postgresql" charset="utf8">sql/postgresql/uninstall.sql</file>
		</sql>
	</uninstall>
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
			<schemapath type="postgresql">sql/updates/postgresql</schemapath>
		</schemas>
	</update>
	<media destination="com_cronjobs" folder="media">
		<folder>js</folder>
		<folder>css</folder>
	</media>
	<administration>
		<menu link="index.php?option=com_cronjobs">Cronjobs</menu>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/com_cronjobs.ini</language>
			<language tag="en-GB">language/en-GB/com_cronjobs.sys.ini</language>
		</languages>
	</administration>
	<dashboards>
		<dashboard title="COM_CRONJOBS_DASHBOARD_TITLE" icon="icon-list">cronjobs</dashboard>
	</dashboards>
</extension>
