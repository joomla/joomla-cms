<?xml version="1.0" encoding="utf-8"?>
<config>
	<fields>
		<field
			name="show_comp_description"
			type="radio"
			default="1"
			label="COM_WEBLINKS_FIELD_CONFIG_DESCRIPTION_LABEL"
			description="COM_WEBLINKS_FIELD_CONFIG_DESCRIPTION_DESC">
			<option
				value="0">JHIDE</option>
			<option
				value="1">JSHOW</option>
		</field>

		<field
			name="comp_description"
			type="textarea"
			default=""
			rows="3"
			cols="50"
			label="COM_WEBLINKS_FIELD_CONFIG_INTRO_LABEL"
			description="COM_WEBLINKS_FIELD_CONFIG_INTRO_DESC" />

		<field
			name="spacer1"
			type="spacer"
			hr="true"
			/>
		<field
			name="show_link_hits"
			type="radio"
			default="1"
			label="COM_WEBLINKS_FIELD_CONFIG_HITS_LABEL"
			description="COM_WEBLINKS_FIELD_CONFIG_HITS_DESC">
			<option
				value="0">JHIDE</option>
			<option
				value="1">JSHOW</option>
		</field>

		<field
			name="show_link_description"
			type="radio"
			default="1"
			label="COM_WEBLINKS_FIELD_CONFIG_LINKDESCRIPTION_LABEL"
			description="COM_WEBLINKS_FIELD_CONFIG_LINKDESCRIPTION_DESC">
			<option
				value="0">JHIDE</option>
			<option
				value="1">JSHOW</option>
		</field>

		<field
			name="show_other_cats"
			type="radio"
			default="1"
			label="COM_WEBLINKS_FIELD_CONFIG_OTHERCATS_LABEL"
			description="COM_WEBLINKS_FIELD_CONFIG_OTHERCATS_DESC">
			<option
				value="0">JHIDE</option>
			<option
				value="1">JSHOW</option>
		</field>

		<field
			name="show_headings"
			type="radio"
			default="1"
			label="COM_WEBLINKS_FIELD_CONFIG_SHOWHEADINGS_LABEL"
			description="COM_WEBLINKS_FIELD_CONFIG_SHOWHEADINGS_DESC">
			<option
				value="0">JHIDE</option>
			<option
				value="1">JSHOW</option>
		</field>

		<field
			name="show_numbers"
			type="radio"
			default="1"
			label="COM_WEBLINKS_FIELD_CONFIG_SHOWNUMBERS_LABEL"
			description="COM_WEBLINKS_FIELD_CONFIG_SHOWNUMBERS_DESC">
			<option
				value="0">JHIDE</option>
			<option
				value="1">JSHOW</option>
		</field>

		<field
			name="show_report"
			type="radio"
			default="1"
			label="COM_WEBLINKS_FIELD_CONFIG_SHOWREPORT_LABEL"
			description="COM_WEBLINKS_FIELD_CONFIG_SHOWREPORT_DESC">
			<option
				value="0">JHIDE</option>
			<option
				value="1">JSHOW</option>
		</field>
		
		<field
			name="count_clicks"
			type="radio"
			default="1"
			label="COM_WEBLINKS_FIELD_CONFIG_COUNTCLICKS_LABEL"
			description="COM_WEBLINKS_FIELD_CONFIG_COUNTCLICKS_DESC">
			<option
				value="0">JNO</option>
			<option
				value="1">JYES</option>
		</field>

		<field
			name="spacer2"
			type="spacer"
			hr="true"
			/>
		<field
			name="target"
			type="list"
			default="0"
			label="COM_WEBLINKS_FIELD_TARGET_LABEL"
			description="COM_WEBLINKS_FIELD_TARGET_DESC">
			<option
				value="0">PARENT_WINDOW_WITH_BROWSER_NAVIGATION</option>
			<option
				value="1">NEW_WINDOW_WITH_BROWSER_NAVIGATION</option>
			<option
				value="2">NEW_WINDOW_WITHOUT_BROWSER_NAVIGATION</option>
		</field>
		<field
			name="link_icons"
			type="imagelist"
			directory="/images"
			default=""
			label="COM_WEBLINKS_FIELD_CONFIG_ICON_LABEL"
			description="COM_WEBLINKS_FIELD_CONFIG_ICON_DESC" />
	</fields>

	<fields
		group="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
		hidden="true">

		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			filter="rules"
			component="com_weblinks"
			section="component" />
	</fields>
</config>