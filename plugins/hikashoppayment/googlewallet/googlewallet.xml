<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="1.0" method="upgrade" group="hikashoppayment">
    <name>Hikashop googlewallet Payment Plugin</name>
    <creationDate>09 10 2014</creationDate>
    <version>1.0</version>
    <author>Hikashop</author>
    <authorEmail>dev@hikashop.com</authorEmail>
    <authorUrl>http://www.hikashop.com</authorUrl>
    <copyright>(C) 2010-2014 HIKARI SOFTWARE. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <description>This plugin enables you to setup your googlewallet payment system</description>

    <files>
        <filename plugin="googlewallet">googlewallet.php</filename>

        <filename>googlewallet_end.php</filename>
    </files>

    <params addpath="/components/com_hikashop/params">

        <param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop" description="HikaShop options" />

    </params>

    <config>

        <fields name="params" addfieldpath="/components/com_hikashop/fields">

            <fieldset name="basic">

                <field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="hikashop" description="HikaShop options" />

            </fieldset>

        </fields>

    </config>

</extension>
