<?xml version="1.0" encoding="utf-8"?>
<install
	version="1.6"
	type="plugin"
	group="auth">
	<name>Search - Content</name>
	<author>Joomla! Project</author>
	<creationDate>November 2005</creationDate>
	<copyright>Copyright (C) 2005 - 2010 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.5</version>
		<description>PLG_SEARCH_CONTENT_XML_DESCRIPTION</description>
	<files>
		<filename
			plugin="content">content.php</filename>
	</files>
	<fields>
		<field
			name="search_limit"
			type="text"
			size="5"
			default="50"
			label="PLG_SEARCH_CONTENT_FIELD_SEARCHLIMIT_LABEL"
			description="PLG_SEARCH_CONTENT_FIELD_SEARCHLIMIT_DESC" />
		<field
			name="spacer1"
			type="spacer"
			hr="true"
			/>
		<field
			name="search_content"
			type="radio"
			default="0"
			label="PLG_SEARCH_CONTENT_FIELD_CONTENT_LABEL"
			description="PLG_SEARCH_CONTENT_FIELD_CONTENT_DESC">
			<option
				value="0">JOFF</option>
			<option
				value="1">JON</option>
		</field>
		<field
			name="search_uncategorised"
			type="radio"
			default="0"
			label="PLG_SEARCH_CONTENT_FIELD_UNCATEGORISED_LABEL"
			description="PLG_SEARCH_CONTENT_FIELD_UNCATEGORISED_DESC">
			<option
				value="0">JOFF</option>
			<option
				value="1">JON</option>
		</field>
		<field
			name="search_archived"
			type="radio"
			default="0"
			label="PLG_SEARCH_CONTENT_FIELD_ARCHIVED_LABEL"
			description="PLG_SEARCH_CONTENT_FIELD_ARCHIVED_DESC">
			<option
				value="0">JOFF</option>
			<option
				value="1">JON</option>
		</field>
	</fields>
</install>