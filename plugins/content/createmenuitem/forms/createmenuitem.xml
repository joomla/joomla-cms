<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="menuitem" label="PLG_CONTENT_CREATEMENUITEM_LINK_OPTIONS" addfieldpath="/plugins/content/createmenuitem/fields">
		<field
			name="menutitle"
			type="text"
			label="PLG_CONTENT_CREATEMENUITEM_ITEM_FIELD_TITLE_LABEL"
			description="PLG_CONTENT_CREATEMENUITEM_ITEM_FIELD_TITLE_DESC"
			class="input-xxlarge input-large-text"
			size="40"
		/>

		<field
			name="menuid"
			type="hidden"
			label="PLG_CONTENT_CREATEMENUITEM_MENUS_MENUID"
			description="PLG_CONTENT_CREATEMENUITEM_MENUS_MENUID_DESC"
			filter="integer"
			default="0"
		/>

		<field
			name="menuempty"
			type="hidden"
			label="PLG_CONTENT_CREATEMENUITEM_MENUS_MENUEMPTY"
			description="PLG_CONTENT_CREATEMENUITEM_MENUS_MENUEMPTY_DESC"
			filter="integer"
			default="1"
		/>

		<field
				name="retrievedmenu"
				type="hidden"
				label="PLG_CONTENT_CREATEMENUITEM_MENUS_RETRIEVEDMENU"
				description="PLG_CONTENT_CREATEMENUITEM_MENUS_RETRIEVEDMENU_DESC"
				default=""
		/>

		<field
			name="menualias"
			type="alias"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			hint="JFIELD_ALIAS_PLACEHOLDER"
			size="40"
		/>

		<field
			name="menutype"
			type="menu"
			label="PLG_CONTENT_CREATEMENUITEM_MENUS_MENUNAME_LABEL"
			description="PLG_CONTENT_CREATEMENUITEM_MENUS_MENUNAME_DESC"
			class="inputbox"
			required="false"
			size="1"
		/>

		<field
			name="parent_id"
			type="menuparent"
			label="PLG_CONTENT_CREATEMENUITEM_MENUS_ITEM_FIELD_PARENT_LABEL"
			description="PLG_CONTENT_CREATEMENUITEM_MENUS_ITEM_FIELD_PARENT_DESC"
			default="1"
			filter="int"
			size="1"
		>
			<option value="1">PLG_CONTENT_CREATEMENUITEM_MENUS_ITEM_ROOT</option>
		</field>

		<field
			name="menuordering"
			type="menuordering"
			label="PLG_CONTENT_CREATEMENUITEM_MENUS_ITEM_FIELD_ORDERING_LABEL"
			description="PLG_CONTENT_CREATEMENUITEM_MENUS_ITEM_FIELD_ORDERING_DESC"
			filter="int"
			size="1"
		/>
	</fieldset>
</form>
