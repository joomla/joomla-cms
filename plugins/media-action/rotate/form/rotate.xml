<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="Rotate" label="PLG_MEDIA-ACTION_ROTATE_LABEL">
		<field
			name="rotate_quality"
			type="integer"
			label="PLG_MEDIA-ACTION_ROTATE_QUALITY"
			addonBefore="PLG_MEDIA-ACTION_ROTATE_QUALITY"
			first="1"
			last="100"
			step="1"
			default="80"
		/>

		<field
			type="spacer"
			hr="true"
		/>

		<field
			name="rotate_angle"
			type="text"
			label="PLG_MEDIA-ACTION_ROTATE_PARAM_ANGLE"
			hiddenLabel="true"
			addonBefore="PLG_MEDIA-ACTION_ROTATE_PARAM_ANGLE"
			addonAfter=""
			pattern="\d*\.?\d*"
			default="0"
		/>

		<field
			name="rotate_a"
			type="range"
			label=""
			value="0"
			min="0"
			max="360"
			labelclass="d-none"
		/>
	</fieldset>
</form>
