<?xml version="1.0" ?>
<install version="1.5" type="plugin" group="editors">
	<name>Editor - TinyMCE 2.0</name>
	<version>2.0.3</version>
	<creationDate>2005</creationDate>
	<author>Moxiecode Systems AB</author>
	<authorEmail>N/A</authorEmail>
	<authorUrl>tinymce.moxiecode.com/</authorUrl>
	<copyright>Moxiecode Systems AB</copyright>
	<license>LGPL</license>
	<description></description>
	<params>
		<param name="theme" type="list" default="advanced" label="Functionality" description="Select functionality">
			<option value="simple">Simple</option>
			<option value="advanced">Advanced</option>
		</param>
 		<param name="@spacer" type="spacer" default="" label="" description="" />
 		<param name="cleanup" type="radio" default="1" label="Code Cleanup" description="PARAMCODECLEANUP">
 			<option value="0">Off</option>
 			<option value="1">On</option>
 		</param>
 		<param name="cleanup_startup" type="radio" default="0" label="Code Cleanup on startup" description="Cleans code on editor load">
 			<option value="0">Off</option>
 			<option value="1">On</option>
 		</param>
 		<param name="autosave" type="radio" default="0" label="Save Warning" description="Save warning - gives warning if you cancel without saving changes">
 			<option value="0">Off</option>
 			<option value="1">On</option>
 		</param>
 		<param name="compressed" type="radio" default="0" label="Compressed Version" description="PARAMCOMPRESSEDVERSION">
 			<option value="0">Off</option>
 			<option value="1">On</option>
 		</param>
 		<param name="@spacer" type="spacer" default="" label="" description="" />
   		<param name="relative_urls" type="list" default="0" label="Urls" description="URL behaviour">
 			<option value="0">Absolute</option>
 			<option value="1">Relative</option>
 		</param>
 		<param name="invalid_elements" type="text" default="applet" label="Prohibited Elements" description="Elements that will be cleaned from the text"/>
  		<param name="content_css" type="radio" default="1" label="Template CSS classes" description="By default the bot looks for an editor_content.css file.  If it cant find one it loads template_css.css.  However if you want to force loading of template_css.css than please select `yes`">
 			<option value="0">No</option>
 			<option value="1">Yes</option>
 		</param>
  		<param name="content_css_custom" type="text" default="" label="Custom CSS Classes" description="You can specify the loading of a custom CSS file - simply enter the FULL URl path to the css file you want loaded.  If you enter a value in this field, this will overrule the `Template CSS classes` parameter"/>
 		<param name="newlines" type="list" default="0" label="Newlines" description="Newlines will be made into the selected option">
 			<option value="1">BR Elements</option>
 			<option value="0">P Elements</option>
 		</param>
 		<param name="@spacer" type="spacer" default="" label="" description="" />
 		<param name="toolbar" type="list" default="top" label="Toolbar" description="Position of the toolbar">
 			<option value="top">Top</option>
 			<option value="bottom">Bottom</option>
 		</param>
 		<param name="@spacer" type="spacer" default="" label="" description="" />
 		<param name="smilies" type="radio" default="1" label="Smilies" description="PARAMSMILIES">
 			<option value="1">Hide</option>
 			<option value="0">Show</option>
 		</param>
 		<param name="table" type="radio" default="1" label="Table" description="PARAMTABLE">
 			<option value="0">Hide</option>
 			<option value="1">Show</option>
 		</param>
 		<param name="flash" type="radio" default="1" label="Flash" description="PARAMFLASH">
 			<option value="1">Hide</option>
 			<option value="0">Show</option>
 		</param>
 		<param name="hr" type="radio" default="1" label="Horizontal Rule" description="Show/Hide the Horizontal Rule button">
 			<option value="0">Hide</option>
 			<option value="1">Show</option>
 		</param>
 		<param name="style" type="radio" default="1" label="Style" description="Show/Hide the CSS Style control button. Only works in `Advanced` mode">
 			<option value="0">Hide</option>
 			<option value="1">Show</option>
 		</param>
 		<param name="layer" type="radio" default="1" label="Layer" description="Show/Hide the Layer control button. Only works in `Advanced` mode">
 			<option value="0">Hide</option>
 			<option value="1">Show</option>
 		</param>
 		<param name="@spacer" type="spacer" default="" label="" description="" />
 		<param name="fullscreen" type="radio" default="1" label="Fullscreen" description="PARAMFULLSCREEN">
 			<option value="0">Hide</option>
 			<option value="1">Show</option>
 		</param>
 		<param name="html_height" type="text" default="550" label="HTML Height" description="PARAMHTMLHEIGHT"/>
 		<param name="html_width" type="text" default="750" label="HTML Width" description="PARAMHTMLWIDTH"/>
 		<param name="preview" type="radio" default="1" label="Preview" description="PARAMPREVIEW">
 			<option value="0">Hide</option>
 			<option value="1">Show</option>
 		</param>
 		<param name="insertdate" type="radio" default="1" label="Insert Date" description="PARAMINSERTDATE">
 			<option value="0">Hide</option>
 			<option value="1">Show</option>
 		</param>
  		<param name="format_date" type="text" default="%Y-%m-%d" label="Date format" description="Format of inserted Date. Only works in `Advanced` mode"/>
		<param name="inserttime" type="radio" default="1" label="Insert Time" description="PARAMINSERTTIME">
 			<option value="0">Hide</option>
 			<option value="1">Show</option>
 		</param>
  		<param name="format_time" type="text" default="%H:%M:%S" label="Time format" description="Format of inserted Time. Only works in `Advanced` mode"/>
   	</params>
</install>