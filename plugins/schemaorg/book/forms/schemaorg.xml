<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="schema">
		<fieldset
			name="schema"
			label="PLG_SYSTEM_SCHEMA_FIELD_SCHEMA_LABEL"
		>
			<field
				name="Book"
				type="subform"
				showon="schemaType:Book"
			>
				<form>
					
					<field
						name="@type"
						type="hidden"
						default="Book"
					/>

					<field
						name="noteBook"
						type="note"
						description="PLG_SCHEMAORG_BOOK_DESCRIPTION_LABEL"
						class="alert alert-info w-100"
					/>

					<field
						name="name"
						type="text"
						filter="string"
						size="30"
						label="PLG_SCHEMAORG_BOOK_FIELD_NAME_LABEL"
					/>

					<field
						name="author"
						type="text"
						filter="string"
						size="30"
						label="PLG_SCHEMAORG_BOOK_FIELD_AUTHOR_LABEL"
					/>

					<field
						name="datePublished"
						type="calendar"
						label="PLG_SCHEMAORG_BOOK_FIELD_DATE_PUBLISHED_LABEL"
						class="input-small"
						filter="user_utc"
						showtime="false" 
						todaybutton="true"
						format="%Y-%m-%d"
					/>

					<field
						name="abridged"
						type="list"
						label="PLG_SCHEMAORG_BOOK_FIELD_ABRIDGED_LABEL"
						default="0"
					>
						<option>None</option>
						<option name="true">True</option>
						<option name="false">False</option>
					</field>

					<field
						name="bookEdition"
						type="text"
						filter="string"
						size="30"
						label="PLG_SCHEMAORG_BOOK_FIELD_BOOK_EDITION_LABEL"
					/>

					<field
						name="bookFormat"
						type="list"
						default="0"
						label="PLG_SCHEMAORG_BOOK_FIELD_BOOK_FORMAT_LABEL"
					>
						<option>None</option>
						<option name="AudiobookFormat">PLG_SCHEMAORG_BOOK_FIELD_AUDIOBOOK</option>
						<option name="EBook">PLG_SCHEMAORG_BOOK_FIELD_E_BOOK_LABEL</option>
						<option name="GraphicNovel">PLG_SCHEMAORG_BOOK_FIELD_GRAPHIC_NOVEL</option>
						<option name="Hardcover">PLG_SCHEMAORG_BOOK_FIELD_HARDCOVER_LABEL</option>
						<option name="Paperback">PLG_SCHEMAORG_BOOK_FIELD_PAPERBACK_LABEL</option>
					</field>

					<field
						name="illustrator"
						type="subform"
						label="PLG_SCHEMAORG_BOOK_FIELD_ILLUSTRATOR_LABEL"
					>

						<form>

							<field
								name="@type"
								type="hidden"
								default="Person"
							/>

							<field
								name="name"
								type="text"
								filter="string"
								label="PLG_SCHEMAORG_BOOK_FIELD_NAME_LABEL"
							/>

							<field
								name="url"
								type="url"
								filter="url"
								validate="url"
								label="PLG_SCHEMAORG_BOOK_FIELD_URL_LABEL"
							/>

							<field
								name="email"
								type="email"
								validate="email"
								label="PLG_SCHEMAORG_BOOK_FIELD_EMAIL_LABEL"
							/>

							<field
								name="address"
								type="subform"
								label="PLG_SCHEMAORG_BOOK_FIELD_ADDRESS_LABEL"
							>
								<form>
									
									<field
										name="@type"
										type="hidden"
										default="PostalAddress"
									/>

									<field
										name="addressLocality"
										type="text"
										label="PLG_SCHEMAORG_BOOK_FIELD_LOCALITY_LABEL"
									/>

									<field
										name="postalCode"
										type="text"
										label="PLG_SCHEMAORG_BOOK_FIELD_POSTAL_CODE_LABEL"
									/>

									<field
										name="streetAddress"
										type="text"
										label="PLG_SCHEMAORG_BOOK_FIELD_STREET_ADDRESS_LABEL"
									/>

								</form>
								
							</field>

						</form>

					</field>

					<field
						name="isbn"
						type="text"
						filter="string"
						size="30"
						label="PLG_SCHEMAORG_BOOK_FIELD_ISBN_LABEL"
					/>

					<field
						name="numberOfPages"
						type="number"
						label="PLG_SCHEMAORG_BOOK_FIELD_NUMBER_OF_PAGES_LABEL"
					/>

					<field
						name="genericField"
						type="subform"
						label="PLG_SCHEMAORG_BOOK_FIELD_GENERIC_FIELD_LABEL"
						multiple="true"
					>
						<form>
							<field
								name="genericTitle"
								type="text"
								filter="string"
								size="30"
								label="PLG_SCHEMAORG_BOOK_FIELD_GENERIC_TITLE_LABEL"
							/>
							<field
								name="genericValue"
								type="text"
								filter="string"
								size="30"
								label="PLG_SCHEMAORG_BOOK_FIELD_GENERIC_VALUE_LABEL"
							/>
						</form>
					
					</field>
					
				</form>
			</field>
		</fieldset>
	</fields>
</form>
