	<author>Joomla! Project</author>
	<creationDate>Feb 2014</creationDate>
	<copyright>Copyright (C) 2005 - 2014 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>0.0.1</version>
	<description>PLG_USER_SESSION_XML_DESCRIPTION</description>
	<files>
		<filename plugin="session">session.php</filename>
		<filename>index.html</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_user_session.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_user_session.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="session_update_flag_name" type="text"
					default="refresh"
					label="PLG_USER_SESSION_UPDATE_FLAG_NAME_LABEL"
					description="PLG_USER_SESSION_UPDATE_FLAG_NAME_DESC"
					required="true"
					filter="string"
					size="50" 
				/>
			</fieldset>
		</fields>
	</config>
</extension>
