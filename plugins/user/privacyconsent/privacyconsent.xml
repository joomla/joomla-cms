<?xml version="1.0" encoding="utf-8"?>
<extension version="3.9" type="plugin" group="user" method="upgrade">
	<name>plg_user_privacyconsent</name>
	<author>Joomla! Project</author>
	<creationDate>April 2018</creationDate>
	<copyright>(C) 2005 - 2018 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>3.9.0</version>
	<description>PLG_USER_PRIVACY_XML_DESCRIPTION</description>
	<files>
		<filename plugin="privacyconsent">privacyconsent.php</filename>
		<folder>privacyconsent</folder>
		<folder>field</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_user_privacyconsent.ini</language>
		<language tag="en-GB">en-GB.plg_user_privacyconsent.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_content/models/fields">
				<field 
					name="privacy_note" 
					type="textarea" 
					label="PLG_USER_PRIVACY_NOTE_FIELD_LABEL" 
					description="PLG_USER_PRIVACY_NOTE_FIELD_DESC"
					hint="PLG_USER_PRIVACY_NOTE_FIELD_DEFAULT"
					class="span12"
					rows="7" 
					cols="20" 
					filter="html"
				/>	
				<field
					name="privacy_article"
					type="modal_article"
					label="PLG_USER_PRIVACY_FIELD_ARTICLE_LABEL"
					description="PLG_USER_PRIVACY_FIELD_ARTICLE_DESC"
					select="true"
					new="true"
					edit="true"
					clear="true"
				/>
				<field 
					name="messageOnRedirect" 
					type="textarea" 
					label="PLG_USER_PRIVACY_REDIRECT_MESSAGE_LABEL" 
					description="PLG_USER_PRIVACY_REDIRECT_MESSAGE_DESC"
					hint="PLG_USER_PRIVACY_REDIRECT_MESSAGE_DEFAULT"
					class="span12"
					rows="7" 
					cols="20" 
					filter="html"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
