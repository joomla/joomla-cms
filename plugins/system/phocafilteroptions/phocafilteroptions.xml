		<languages>
			<language tag="en-GB">language/en-GB/en-GB.plg_system_phocafilteroptions.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.plg_system_phocafilteroptions.sys.ini</language>
		</languages>
	</administration>
	
	<config>
		<fields name="params">
			<fieldset name="basic">	
			
			<field name="component_edit_view" type="list" default="" label="PLG_SYSTEM_PHOCAFILTEROPTIONS_COMPONENT_EDIT_VIEW_LABEL" description="PLG_SYSTEM_PHOCAFILTEROPTIONS_COMPONENT_EDIT_VIEW_DESC" multiple="true" layout="joomla.form.field.list-fancy-select">
                <option value="com_phocacart">PLG_SYSTEM_PHOCAFILTEROPTIONS_PHOCA_CART</option>
            </field>
		
			</fieldset>
		</fields>
	</config>

	<updateservers>
		<server type="extension" name="PLG_SYSTEM_PHOCAFILTEROPTIONS" priority="1"><![CDATA[https://raw.githubusercontent.com/PhocaCz/PhocaFilterOptions/master/manifest.xml]]></server>
	</updateservers>
