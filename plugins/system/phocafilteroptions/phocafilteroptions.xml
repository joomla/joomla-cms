	<version>4.0.5</version>
	<description>PLG_SYSTEM_PHOCAFILTEROPTIONS_DESCRIPTION</description>
	<projectName>PhocaFilterOptions</projectName>

	<media destination="plg_system_phocafilteroptions" folder="media">
		<folder>css</folder>
		<folder>js</folder>
		<filename>index.html</filename>
	</media>

	<files>
		<filename plugin="phocafilteroptions">index.html</filename>
		<filename plugin="phocafilteroptions">phocafilteroptions.php</filename>
		<filename plugin="phocafilteroptions">manifest.xml</filename>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_phocafilteroptions.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_phocafilteroptions.sys.ini</language>
