<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
	<name>plg_system_shortcut</name>
	<author>Joomla! Project</author>
	<creationDate>Jun 2022</creationDate>
	<copyright>(C) 2022 Open Source Matters, Inc.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>__DEPLOY_VERSION__</version>
	<description>PLG_SYSTEM_SHORTCUT_XML_DESCRIPTION</description>
	<namespace path="src">Joomla\Plugin\System\Shortcut</namespace>
	<media destination="plg_system_shortcut" folder="media">
	  <folder>js</folder>
	</media>
	<files>
		<folder>fields</folder>
		<filename plugin="shortcut">shortcut.php</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/plg_system_shortcut.ini</language>
		<language tag="en-GB">language/en-GB/plg_system_shortcut.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset
				name="buttons"
				label="PLG_SYSTEM_SHORTCUT_CORE_SHORTCUTS_TAB"
				addfieldprefix="Joomla\Plugin\System\Shortcut\Field"
				>
				<fieldset
					name="generic_buttons"
					label="PLG_SYSTEM_SHORTCUT_GENERIC_BUTTONS_FIELDSET_LABEL"
					>
					<field
						name="helpKey"
						type="keySelect"
						label="PLG_SYSTEM_SHORTCUT_BUTTON_HELP_LBL"
						default="ALT + X"
					/>
				</fieldset>
				<fieldset
					name="list_buttons"
					label="PLG_SYSTEM_SHORTCUT_LIST_BUTTONS_FIELDSET_LABEL"
					>
					<field
						name="newKey"
						type="keySelect"
						label="PLG_SYSTEM_SHORTCUT_BUTTON_NEW_LBL"
						default="ALT + N"
					/>
					<field
						name="optionKey"
						type="keySelect"
						label="PLG_SYSTEM_SHORTCUT_BUTTON_OPTION_LBL"
						default="ALT + O"
					/>
				</fieldset>
				<fieldset
					name="form_buttons"
					label="PLG_SYSTEM_SHORTCUT_FORM_BUTTONS_FIELDSET_LABEL"
					>
					<field
						name="applyKey"
						type="Keyselect"
						label="PLG_SYSTEM_SHORTCUT_BUTTON_APPLY_LBL"
						default="ALT + S"
					/>

					<field
						name="saveKey"
						type="keySelect"
						label="PLG_SYSTEM_SHORTCUT_BUTTON_SAVE_LBL"
						default="ALT + W"
					/>

					<field
						name="saveNewKey"
						type="keySelect"
						label="PLG_SYSTEM_SHORTCUT_BUTTON_SAVENEW_LBL"
						default="SHIFT + ALT + N"
					/>

					<field
						name="cancelKey"
						type="keySelect"
						label="PLG_SYSTEM_SHORTCUT_BUTTON_CANCEL_LBL"
						default="ALT + Q"
					/>
				</fieldset>
			</fieldset>
			<fieldset
				name="editor"
				label="PLG_SYSTEM_SHORTCUT_EDITOR_LBL"
				addfieldpath="/plugins/system/shortcut/fields"
				>
				<field
					name="editorArticleKey"
					type="keySelect"
					label="PLG_SYSTEM_SHORTCUT_CMS_CONTENT_ARTICLE_LBL"
					default="CTRL + ALT + A"
				/>

				<field
					name="editorContactKey"
					type="keySelect"
					label="PLG_SYSTEM_SHORTCUT_CMS_CONTENT_CONTACT_LBL"
					default="CTRL + ALT + C"
				/>

				<field
					name="editorFieldsKey"
					type="keySelect"
					label="PLG_SYSTEM_SHORTCUT_CMS_CONTENT_FIELDS_LBL"
					default="CTRL + ALT + F"
				/>

				<field
					name="editorImageKey"
					type="keySelect"
					label="PLG_SYSTEM_SHORTCUT_CMS_CONTENT_IMAGE_LBL"
					default="CTRL + ALT + I"
				/>

				<field
					name="editorMenuKey"
					type="keySelect"
					label="PLG_SYSTEM_SHORTCUT_CMS_CONTENT_MENU_LBL"
					default="CTRL + ALT + M"
				/>

				<field
					name="editorModuleKey"
					type="keySelect"
					label="PLG_SYSTEM_SHORTCUT_CMS_CONTENT_MODULE_LBL"
					default="CTRL + SHIFT + ALT + M"
				/>

				<field
					name="editorPagebreakKey"
					type="keySelect"
					label="PLG_SYSTEM_SHORTCUT_CMS_CONTENT_PAGEBREAK_LBL"
					default="CTRL + ALT + P"
				/>

				<field
					name="editorReadmoreKey"
					type="keySelect"
					label="PLG_SYSTEM_SHORTCUT_CMS_CONTENT_READMORE_LBL"
					default="CTRL + ALT + R"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
