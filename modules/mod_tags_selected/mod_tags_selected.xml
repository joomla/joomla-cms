<?xml version="1.0" encoding="utf-8"?>
<extension
        type="module"
        version="3.1"
        client="site"
        method="upgrade">
    <name>mod_tags_selected</name>
    <author>Joomla! Project</author>
    <creationDate>June 2013</creationDate>
    <copyright>Copyright (C) 2005 - 2013 Open Source Matters. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>admin@joomla.org</authorEmail>
    <authorUrl>www.joomla.org</authorUrl>
    <version>3.1.0</version>
    <description>MOD_TAGS_SELECTED_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_tags_selected">mod_tags_selected.php</filename>
        <folder>tmpl</folder>
        <folder>language</folder>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <filename>mod_tags_selected.xml</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_tags_selected.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_tags_selected.sys.ini</language>
    </languages>
    <help key="JHELP_EXTENSIONS_MODULE_MANAGER_TAGS_SELECTED"/>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="selected_tag"
                        type="sql"
                        query="SELECT id, title AS title FROM `#__tags` WHERE published=1 AND title!='ROOT'"
                        label="MOD_TAGS_SELECTED_TAG_LABEL"
                        key_field="id"
                        value_field="title"
                        description="MOD_TAGS_SELECTED_TAG_DESC">

                </field>
                <field
                        name="maximum"
                        type="integer"
                        default="5"
                        first="1"
                        last="20"
                        step="1"
                        label="MOD_TAGS_SELECTED_MAX_LABEL"
                        description="MOD_TAGS_SELECTED_MAX_DESC">
                </field>
                <field name="order_by"
                       type="list"
                       default="0"
                       label="MOD_TAGS_SELECTED_ORDER_BY_LABEL"
                       description="MOD_TAGS_SELECTED_ORDER_BY_DESC">
                    <option value="0">MOD_TAGS_SELECTED_ORDER_BY_TITLE</option>
                    <option value="1">MOD_TAGS_SELECTED_ORDER_BY_CREATED_TIME</option>
                    <option value="2">MOD_TAGS_SELECTED_ORDER_BY_MODIFIED_TIME</option>
                    <option value="3">MOD_TAGS_SELECTED_ORDER_BY_PUBLISHED_TIME</option>
                </field>
                <field name="order_direction"
                       type="list"
                       default="0"
                       label="MOD_TAGS_SELECTED_ORDER_DIRECTION_LABEL"
                       description="MOD_TAGS_SELECTED_ORDER_DIRECTION_DESC">
                    <option value="0">MOD_TAGS_SELECTED_ORDER_DIRECTION_ASCENDING</option>
                    <option value="1">MOD_TAGS_SELECTED_ORDER_DIRECTION_DESCENDING</option>
                </field>

            </fieldset>
            <fieldset
                    name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
                <field
                        name="moduleclass_sfx"
                        type="textarea" rows="3"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
                <field
                        name="owncache"
                        type="list"
                        default="1"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                            value="1">JGLOBAL_USE_GLOBAL
                    </option>
                    <option
                            value="0">COM_MODULES_FIELD_VALUE_NOCACHING
                    </option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
