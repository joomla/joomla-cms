<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="1.6.0"
	client="site"
	method="upgrade">
	<name>mod_search</name>
	<author>Joomla! Project</author>
	<creationDate>July 2004</creationDate>
	<copyright>Copyright (C) 2005 - 2010 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.6.0</version>
	<description>MOD_SEARCH_XML_DESCRIPTION</description>
	<files>
		<filename
			module="mod_search">mod_search.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.php</filename>
		<filename>mod_search.xml</filename>
	</files>
	<languages>
		<language
			tag="en-GB">en-GB.mod_search.ini</language>
	</languages>
	<fields>
		<field
			name="width"
			type="text"
			default="20"
			label="MOD_SEARCH_FIELD_BOXWIDTH_LABEL"
			description="MOD_SEARCH_FIELD_BOXWIDTH_DESC" />
		<field
			name="text"
			type="text"
			default=""
			label="MOD_SEARCH_FIELD_TEXT_LABEL"
			description="MOD_SEARCH_FIELD_TEXT_DESC" />
		<field
			name="spacer1"
			type="spacer"
			hr="true"
			/>
		<field
			name="button"
			type="radio"
			default=""
			label="MOD_SEARCH_FIELD_BUTTON_LABEL"
			description="MOD_SEARCH_FIELD_BUTTON_DESC">
			<option
				value="">JNO</option>
			<option
				value="1">JYES</option>
		</field>
		<field
			name="button_pos"
			type="list"
			default="right"
			label="MOD_SEARCH_FIELD_BUTTONPOS_LABEL"
			description="MOD_SEARCH_FIELD_BUTTONPOS_DESC">
			<option
				value="right">MOD_SEARCH_FIELD_VALUE_RIGHT</option>
			<option
				value="left">MOD_SEARCH_FIELD_VALUE_LEFT</option>
			<option
				value="top">MOD_SEARCH_FIELD_VALUE_TOP</option>
			<option
				value="bottom">MOD_SEARCH_FIELD_VALUE_BOTTOM</option>
		</field>
		<field
			name="imagebutton"
			type="radio"
			default=""
			label="MOD_SEARCH_FIELD_IMAGEBUTTON_LABEL"
			description="MOD_SEARCH_FIELD_IMAGEBUTTON_DESC">
			<option
				value="">JNO</option>
			<option
				value="1">JYES</option>
		</field>
		<field
			name="button_text"
			type="text"
			default=""
			label="MOD_SEARCH_FIELD_BUTTONTEXT_LABEL"
			description="MOD_SEARCH_FIELD_BUTTONTEXT_DESC" />
		<field
			name="spacer2"
			type="spacer"
			hr="true"
			/>
		<field
			name="set_itemid"
			type="text"
			default=""
			label="MOD_SEARCH_FIELD_SETITEMID_LABEL"
			description="MOD_SEARCH_FIELD_SETITEMID_DESC" />
	</fields>
	<fields
		group="advanced">
		<field
			name="layout"
			type="modulelayout"
			label="JFIELD_ALT_LAYOUT_LABEL"
			description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
		<field
			name="moduleclass_sfx"
			type="text"
			default=""
			label="MODULES_FIELD_MODULECLASS_SFX_LABEL"
			description="MODULES_FIELD_MODULECLASS_SFX_DESC" />
		<field
			name="cache"
			type="list"
			default="1"
			label="MODULES_FIELD_CACHING_LABEL"
			description="MODULES_FIELD_CACHING_DESC">
			<option
				value="1">USE_GLOBAL</option>
			<option
				value="0">MODULES_FIELD_VALUE_NOCACHING</option>
		</field>
		<field
			name="cache_time"
			type="text"
			default="900"
			label="MODULES_FIELD_CACHE_TIME_LABEL"
			description="MODULES_FIELD_CACHE_TIME_DESC" />
	</fields>
</extension>