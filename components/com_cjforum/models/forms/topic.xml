<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_categories/models/fields">
	    
		<field id="id" name="id" type="hidden" class="inputbox" label="COM_CJFORUM_ID_LABEL" size="10" default="0" readonly="true" />
		<field id="contenthistory" name="contenthistory" type="contenthistory" data-typeAlias="com_cjforum.topic" label="JTOOLBAR_VERSIONS" />
		<field name="asset_id" type="hidden" filter="unset" />
		
		<field id="title" name="title" type="text" label="JGLOBAL_TITLE" description="JFIELD_TITLE_DESC" class="inputbox input-block-level form-control" size="30" required="true" />
		<field id="alias" name="alias" type="text" label="JFIELD_ALIAS_LABEL" description="JFIELD_ALIAS_DESC" hint="JFIELD_ALIAS_PLACEHOLDER" class="inputbox input-block-level form-control" size="45" />
		<field id="catid" name="catid" type="categoryedit" extension="com_cjforum" label="JCATEGORY" description="JFIELD_CATEGORY_DESC" class="inputbox input-block-level form-control" required="true" />
		<field name="tags" type="tag" label="JTAG" description="JTAG_DESC" class="inputbox input-block-level form-control" multiple="true" size="45"></field>
		
		<field name="topictext" type="cjeditor" buttons="true" label="CONTENT_TEXT_LABEL" description="CONTENT_TEXT_DESC" class="inputbox form-control" 
		    filter="JComponentHelper::filterText" asset_id="com_cjforum" required="true" height="250"/>

		<field id="state" name="state" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox form-control" size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field id="featured" name="featured" type="list" label="JGLOBAL_FIELD_FEATURED_LABEL" description="JGLOBAL_FIELD_FEATURED_DESC" class="inputbox form-control" default="0">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		
		<field id="created" name="created" type="calendar" filter="unset" />
		<field id="created_by" name="created_by" type="text" filter="unset" />
		
		<field id="created_by_alias" name="created_by_alias" type="text" label="JGLOBAL_FIELD_CREATED_BY_ALIAS_LABEL" 
		    description="JGLOBAL_FIELD_CREATED_BY_ALIAS_DESC" class="inputbox form-control" size="20" />

		<field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox form-control" size="45" labelclass="control-label" />

		<field id="publish_up" name="publish_up" type="calendar" label="JGLOBAL_FIELD_PUBLISH_UP_LABEL" 
		    description="JGLOBAL_FIELD_PUBLISH_UP_DESC" class="inputbox form-control" format="%Y-%m-%d %H:%M:%S" size="22" filter="user_utc" />

		<field id="publish_down" name="publish_down" type="calendar" label="JGLOBAL_FIELD_PUBLISH_DOWN_LABEL" 
		    description="JGLOBAL_FIELD_PUBLISH_DOWN_DESC" class="inputbox form-control" format="%Y-%m-%d %H:%M:%S" size="22" filter="user_utc" />

		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL" description="JFIELD_LANGUAGE_DESC" class="inputbox form-control">
			<option value="*">JALL</option>
		</field>

		<field id="metakey" name="metakey" type="textarea" label="JFIELD_META_KEYWORDS_LABEL" description="JFIELD_META_KEYWORDS_DESC" class="inputbox form-control" rows="5" cols="50" />
		<field id="metadesc" name="metadesc" type="textarea" label="JFIELD_META_DESCRIPTION_LABEL" description="JFIELD_META_DESCRIPTION_DESC" class="inputbox form-control" rows="5" cols="50" />
		<field id="access" name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL" description="JFIELD_ACCESS_DESC" class="inputbox form-control" size="1" />
		<field name="rules" type="rules" label="JFIELD_RULES_LABEL" translate_label="false" class="inputbox" filter="rules" component="com_cjforum" section="topic" validate="rules"/>
	</fieldset>
	<fields name="images">
		<fieldset name="image-intro">
			<field name="image_intro" type="media" label="COM_CJFORUM_FIELD_INTRO_LABEL" description="COM_CJFORUM_FIELD_INTRO_DESC" />
			<field name="image_intro_alt" type="text" label="COM_CJFORUM_FIELD_IMAGE_ALT_LABEL" description="COM_CJFORUM_FIELD_IMAGE_ALT_DESC" class="inputbox" size="20" />
			<field name="image_intro_caption" type="text" label="COM_CJFORUM_FIELD_IMAGE_CAPTION_LABEL" description="COM_CJFORUM_FIELD_IMAGE_CAPTION_DESC" class="inputbox" size="20" />
			<field name="float_intro" type="list" label="COM_CJFORUM_FLOAT_INTRO_LABEL" description="COM_CJFORUM_FLOAT_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="right">COM_CJFORUM_RIGHT</option>
				<option value="left">COM_CJFORUM_LEFT</option>
			</field>
		</fieldset>
		<fieldset name="image-full">
			<field name="image_fulltext" type="media" label="COM_CJFORUM_FIELD_FULL_LABEL" description="COM_CJFORUM_FIELD_FULL_DESC" />
			<field name="image_fulltext_alt" type="text" label="COM_CJFORUM_FIELD_IMAGE_ALT_LABEL" description="COM_CJFORUM_FIELD_IMAGE_ALT_DESC" class="inputbox" size="20" />
			<field name="image_fulltext_caption" type="text" label="COM_CJFORUM_FIELD_IMAGE_CAPTION_LABEL" description="COM_CJFORUM_FIELD_IMAGE_CAPTION_DESC" class="inputbox" size="20" />
			<field name="float_fulltext" type="list" label="COM_CJFORUM_FLOAT_FULLTEXT_LABEL" description="COM_CJFORUM_FLOAT_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="right">COM_CJFORUM_RIGHT</option>
				<option value="left">COM_CJFORUM_LEFT</option>
			</field>
		</fieldset>
	</fields>
	<fields name="urls">
		<field name="urla" type="url" validate="url" filter="url" label="COM_CJFORUM_FIELD_URLA_LABEL" description="COM_CJFORUM_FIELD_URL_DESC" />
		<field name="urlatext" type="text" label="COM_CJFORUM_FIELD_URLA_LINK_TEXT_LABEL" description="COM_CJFORUM_FIELD_URL_LINK_TEXT_DESC" class="inputbox" size="20" />
		<field name="targeta" type="hidden" />

		<field name="urlb" type="url" filter="url" validate="url" label="COM_CJFORUM_FIELD_URLB_LABEL" description="COM_CJFORUM_FIELD_URL_DESC" />
		<field name="urlbtext" type="text" label="COM_CJFORUM_FIELD_URLB_LINK_TEXT_LABEL" description="COM_CJFORUM_FIELD_URL_LINK_TEXT_DESC" class="inputbox" size="20" />
		<field name="targetb" type="hidden" />
		<field name="urlc" type="url" filter="url" validate="url" label="COM_CJFORUM_FIELD_URLC_LABEL" description="COM_CJFORUM_FIELD_URL_DESC" />
		<field name="urlctext" type="text" label="COM_CJFORUM_FIELD_URLC_LINK_TEXT_LABEL" description="COM_CJFORUM_FIELD_URL_LINK_TEXT_DESC" class="inputbox" size="20" />
		<field name="targetc" type="hidden" />
	</fields>
	<fields name="metadata">
		<fieldset name="jmetadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
			<field name="robots" type="hidden" filter="unset"
				label="JFIELD_METADATA_ROBOTS_LABEL" description="JFIELD_METADATA_ROBOTS_DESC"
				labelclass="control-label">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="index, follow">JGLOBAL_INDEX_FOLLOW</option>
				<option value="noindex, follow">JGLOBAL_NOINDEX_FOLLOW</option>
				<option value="index, nofollow">JGLOBAL_INDEX_NOFOLLOW</option>
				<option value="noindex, nofollow">JGLOBAL_NOINDEX_NOFOLLOW</option>
			</field>

			<field name="author" type="hidden" filter="unset" label="JAUTHOR" description="JFIELD_METADATA_AUTHOR_DESC" size="20" labelclass="control-label" />
			<field name="rights" type="hidden" label="JFIELD_META_RIGHTS_LABEL" filter="unset" description="JFIELD_META_RIGHTS_DESC" required="false" labelclass="control-label" />
			<field name="xreference" type="hidden" filter="unset" label="COM_CJFORUM_FIELD_XREFERENCE_LABEL" 
			    description="COM_CJFORUM_FIELD_XREFERENCE_DESC" class="inputbox" size="20" labelclass="control-label" />

		</fieldset>
	</fields>
</form>
