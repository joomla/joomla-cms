<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout
		title="com_content_category_view_default_title">
		<message>
			<![CDATA[com_content_category_view_default_desc]]>
		</message>
	</layout>

	<fields
		group="request"
		array="true"
		label="Menus_Layout_Request_Variables_Label"
		description="Menus_Layout_Request_Variables_Desc">
		<field
			name="id"
			type="categories"
			extension="com_content"
			required="true"			
			label="Category"
			description="Choose a category..." />
	</fields>

	<fields
		group="basic"
		label="Menus_Layout_Basic_Options_Label"
		description="">

		<field
			name="display_num"
			type="list"
			default="10"
			label="Num Links"
			description="Number of Items to display as links.">
			<option
				value="5">5</option>
			<option
				value="10">10</option>
			<option
				value="15">15</option>
			<option
				value="20">20</option>
			<option
				value="25">25</option>
			<option
				value="30">30</option>
			<option
				value="50">50</option>
			<option
				value="100">100</option>
			<option
				value="0">All</option>
		</field>

		<field
			name="show_headings"
			type="radio"
			default="1"
			label="Table Headings"
			description="Show/Hide the Table Headings">
			<option
				value="0">Hide</option>
			<option
				value="1">Show</option>
		</field>

		<field
			name="show_date"
			type="list"
			default=""
			label="Date Column"
			description="Show/Hide the Date column">
			<option
				value="0">Hide</option>
			<option
				value="1">Show</option>
		</field>

		<field
			name="date_format"
			type="text"
			size="15"
			default=""
			label="Date Format"
			description="fieldDATEFORMAT" />

		<field
			type="spacer" />

		<field
			name="filter"
			type="radio"
			default="1"
			label="Filter"
			description="Show/Hide the Filter ability">
			<option
				value="0">Hide</option>
			<option
				value="1">Show</option>
		</field>

		<field
			name="filter_type"
			type="list"
			default="title"
			label="Filter Field"
			description="Which field shall the filter apply to">
			<option
				value="title">Title</option>
			<option
				value="author">Author</option>
			<option
				value="hits">Hits</option>
		</field>
	</fields>

	<fields
		group="advanced"
		label="Menus_Layout_Advanced_Options_Label"
		description="">

		<field
			name="orderby_sec"
			type="list"
			default=""
			label="Primary Order"
			description="Order that the items will be displayed in.">
			<option
				value="">Default</option>
			<option
				value="date">Oldest first</option>
			<option
				value="rdate">Most recent first</option>
			<option
				value="alpha">Title Alphabetical</option>
			<option
				value="ralpha">Title Reverse-Alphabetical</option>
			<option
				value="author">Author Alphabetical</option>
			<option
				value="rauthor">Author Reverse-Alphabetical</option>
			<option
				value="hits">Most Hits</option>
			<option
				value="rhits">Least Hits</option>
			<option
				value="order">Ordering</option>
		</field>

		<field
			type="spacer" />

		<field
			name="show_pagination"
			type="list"
			default="1"
			label="Pagination"
			description="Show/Hide Pagination support">
			<option
				value="0">Hide</option>
			<option
				value="1">Show</option>
		</field>

		<field
			name="show_pagination_limit"
			type="radio"
			default="1"
			label="Display Select"
			description="Show/Hide the Display Select dropdown">
			<option
				value="0">Hide</option>
			<option
				value="1">Show</option>
		</field>

		<field
			name="show_feed_link"
			type="radio"
			default="1"
			label="Show a feed link"
			description="fieldSHOWFEEDLINK">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>
	</fields>
</metadata>