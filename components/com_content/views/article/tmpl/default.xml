<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="com_content_article_view_default_title">
		<message>
			<![CDATA[com_content_article_view_default_desc]]>
		</message>
	</layout>

	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request"
			addfieldpath="/administrator/components/com_content/models/fields"
		>

			<field name="id" type="modal_article"
				label="Select_Article_label"
				required="true"
				description="Select_article_desc"
			/>
		</fieldset>
	</fields>

	<!-- Add fields to the parameters object for the layout. -->
	<fields name="params">
	
		<!-- Integration options. -->
		<fieldset name="integration"
		>

			<field name="article-allow_ratings" type="list"
				description="Content_Attribs_Allow_Ratings_Desc"
				label="Content_Attribs_Allow_Ratings_Label"
			>
				<option value="">JCOMMON_USE_GLOBAL</option>
				<option value="0">JNo</option>
				<option value="1">JYes</option>
			</field>

			<field name="article-allow_comments" type="list"
				description="Content_Attribs_Allow_Comments_Desc"
				label="Content_Attribs_Allow_Comments_Label"
			>
				<option value="">JCOMMON_USE_GLOBAL</option>
				<option value="0">JNo</option>
				<option value="1">JYes</option>
			</field>
		</fieldset>

		<!-- Basic options. -->
		<fieldset name="basic"
			label="Content_Attribs_Article_Settings_Label"
		>
	
			<field name="show_category" type="list"
				description="Content_Attribs_Show_Category_Desc"
				label="Content_Attribs_Show_Category_Label"
			>
				<option value="">JCOMMON_USE_GLOBAL</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>

			<field name="link_category" type="list"
				description="Content_Attribs_Link_Category_Desc"
				label="Content_Attribs_Link_Category_Label"
			>
				<option value="">JCOMMON_USE_GLOBAL</option>
				<option value="0">JNo</option>
				<option value="1">JYes</option>
			</field>

			<field name="show_title" type="list"
				description="Content_Attribs_Show_Title_Desc"
				label="Content_Attribs_Show_Title_Label"
			>
				<option value="">JCOMMON_USE_GLOBAL</option>
				<option value="0">JCOMMON_HIDE</option>
				<option value="1">JCOMMON_SHOW</option>
			</field>

			<field name="link_titles" type="list"
				description="Content_Attribs_Linked_Titles_Desc"
				label="Content_Attribs_Linked_Titles_Label"
			>
				<option value="">JCOMMON_USE_GLOBAL</option>
				<option value="0">JNo</option>
				<option value="1">JYes</option>
			</field>

			<field name="show_intro" type="list"
				description="Content_Attribs_Show_Intro_Desc"
				label="Content_Attribs_Show_Intro_Label"
			>
				<option value="">JCOMMON_USE_GLOBAL</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>

			<field name="show_author" type="list"
				description="Content_Attribs_Show_Author_Desc"
				label="Content_Attribs_Show_Author_Label"
			>
				<option value="">JCOMMON_USE_GLOBAL</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>

			<field name="show_create_date" type="list"
				description="Content_Attribs_Show_Create_Date_Desc"
				label="Content_Attribs_Show_Create_Date_Label"
			>
				<option value="">JCOMMON_USE_GLOBAL</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>

			<field name="show_modify_date" type="list"
				description="Content_Attribs_Show_Modify_Date_Desc"
				label="Content_Attribs_Show_Modify_Date_Label"
			>
				<option value="">JCOMMON_USE_GLOBAL</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>

			<field name="show_publish_date" type="list"
				description="Content_Attribs_Show_Publish_Date_Desc"
				label="Content_Attribs_Show_Publish_Date_Label"
			>
				<option value="">JCOMMON_USE_GLOBAL</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>

			<field name="show_item_navigation" type="list"
				description="Content_Attribs_Show_Navigation_Desc"
				label="Content_Attribs_Show_Navigation_Label"
			>
				<option value="">JCOMMON_USE_GLOBAL</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>

			<field name="show_icons" type="list"
				description="Content_Attribs_Show_Icons_Desc"
				label="Content_Attribs_Show_Icons_Label"
			>
				<option value="">JCOMMON_USE_GLOBAL</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>

			<field name="show_print_icon" type="list"
				description="Content_Attribs_Show_Print_Icon_Desc"
				label="Content_Attribs_Show_Print_Icon_Label"
			>
				<option value="">JCOMMON_USE_GLOBAL</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>

			<field name="show_email_icon" type="list"
				description="Content_Attribs_Show_Email_Icon_Desc"
				label="Content_Attribs_Show_Email_Icon_Label"
			>
				<option value="">JCOMMON_USE_GLOBAL</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>

			<field name="show_hits" type="list"
				description="Content_Attribs_Show_Hits_Desc"
				label="Content_Attribs_Show_Hits_Label"
			>
				<option value="">JCOMMON_USE_GLOBAL</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>
		</fieldset>
	</fields>

	<!-- Add fields to the metadata object for the layout. -->
	<fields name="params">
	
		<!-- Metadata options. -->
		<fieldset name="metadata">

			<field name="robots" type="list"
				description="JField_Metadata_Robots_Desc"
				label="JField_Metadata_Robots_Label"
			>
				<option value="">JCOMMON_USE_GLOBAL</option>
				<option value="0">index, follow</option>
				<option value="1">noindex, follow</option>
				<option value="2">index, nofollow</option>
				<option value="3">noindex, nofollow</option>
				<option value="4">Don't display robots tag</option>
			</field>

			<field name="rights" type="textarea"
				cols="30"
				description="JFIELD_META_RIGHTS_DESC"
				filter="string"
				label="JFIELD_META_RIGHTS_LABEL"
				rows="2"
			/>
		</fieldset>
	</fields>
</metadata>