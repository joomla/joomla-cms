<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="credentials-username" label="COM_USERS_LOGIN_DEFAULT_LABEL">
		<field
			name="username"
			type="text"
			label="COM_USERS_LOGIN_USERNAME_LABEL"
			class="validate-username"
			filter="username"
			size="25"
			required="true"
			validate="username"
			autofocus="true"
			autocomplete="username"
			hint="COM_USERS_LOGIN_USERNAME_LABEL"
		/>
	</fieldset>
	
	<fieldset name="credentials-password" label="COM_USERS_LOGIN_DEFAULT_LABEL">
		<field
			name="password"
			type="password"
			label="JGLOBAL_PASSWORD"
			required="true"
			filter="raw"
			size="25"
			autocomplete="current-password"
			hint="JGLOBAL_PASSWORD"
		/>
	</fieldset>

	<fieldset>
		<field
			name="return"
			type="hidden"
		/>
	</fieldset>
</form>
