<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id$ -->
<form>
	<fieldset name="core"
		label="Users_Profile_Default_Label">

		<field name="id" type="hidden"
			filter="integer"
		/>

		<field name="name" type="text"
			description="Users_Profile_Name_Desc"
			filter="string"
			label="Users_Profile_Name_Label"
			message="Users_Profile_Name_Message"
			required="true"
			size="30"
		/>

		<field name="username" type="text"
			class="validate-username"
			description="Users_Profile_Username_Desc"
			field="id"
			filter="username"
			label="Users_Profile_Username_Label"
			message="Users_Profile_Username_Message"
			required="true"
			size="30"
			validate="username"
		/>

		<field name="password1" type="password"
			autocomplete="off"
			class="validate-password"
			description="Users_Profile_Password1_Desc"
			field="password2"
			filter="raw"
			label="Users_Profile_Password1_Label"
			message="Users_Profile_Password1_Message"
			size="30"
			validate="equals"
		/>

		<field name="password2" type="password"
			autocomplete="off"
			class="validate-password"
			description="Users_Profile_Password2_Desc"
			filter="raw"
			label="Users_Profile_Password2_Label"
			message="Users_Profile_Password2_Message"
			size="30"
		/>

		<field name="email1" type="text"
			class="validate-email"
			description="Users_Profile_Email1_Desc"
			field="id"
			filter="string"
			label="Users_Profile_Email1_Label"
			message="Users_Profile_Email1_Message"
			required="true"
			size="30"
			unique="true"
			validate="email"
		/>

		<field name="email2" type="text"
			class="validate-email"
			description="Users_Profile_Email2_Desc"
			field="email1"
			filter="string"
			label="Users_Profile_Email2_Label"
			message="Users_Profile_Email2_Message"
			required="true"
			size="30"
			validate="equals"
		/>
	</fieldset>
</form>