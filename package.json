    "karma-jasmine": "^0.3.8",
    "karma-jasmine-ajax": "^0.1.13",
    "karma-requirejs": "^1.0.0",
    "karma-verbose-reporter": "0.0.3",
    "requirejs": "^2.2.0",
    "text": "requirejs/text",
    "web-component-tester": "latest",
    "webcomponentsjs": "latest"
  },
  "license": "GPL-2.0+",
